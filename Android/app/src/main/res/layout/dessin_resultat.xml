<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity"
		style="@style/MyApp"
		android:name="Test"
>

	<TextView

			android:textSize="28sp"
			android:id="@+id/resultat_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="@color/Green"
			android:layout_marginTop="25dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="10dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toTopOf="@id/res_coment"

	/>

	<TextView
			android:textSize="20sp"
			android:id="@+id/res_coment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="8dp"
			android:padding="20dp"
			android:text=""
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/resultat_text"
			app:layout_constraintBottom_toTopOf="@id/My_Canvas_res"
	/>

	<unice.plfgd.MyCanvas
			android:id="@+id/My_Canvas_res"
			android:background="#FFFFFF"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="15dp"
			app:layout_constraintTop_toBottomOf="@id/res_coment"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toTopOf="@id/res_retour"
	/>

	<Button
			android:id="@+id/res_retour"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="15dp"
			android:padding="30dp"
			android:text="Retour"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@id/res_rejouer"
			app:layout_constraintBottom_toBottomOf="parent"
	/>

	<Button
			android:id="@+id/res_rejouer"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="15dp"
			android:padding="30dp"
			android:text="Rejouer"
			app:layout_constraintLeft_toRightOf="@id/res_retour"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
	/>

</android.support.constraint.ConstraintLayout>
