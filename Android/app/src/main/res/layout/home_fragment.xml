<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
>

	<TextView
			android:textSize="32sp"
			android:id="@+id/home_welcome"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/welcome"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginBottom="20dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toTopOf="@id/server_field"
	/>

	<EditText
			android:id="@+id/server_field"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="15dp"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/home_welcome"
			android:hint="@string/server_address_port"
			android:singleLine="true"
			android:inputType="text"/>

	<EditText
			android:id="@+id/name_field"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="15dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/server_field"
			android:hint="@string/username"
			android:singleLine="true"
			android:inputType="text"
	/>

	<Button
			android:id="@+id/connect_button"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="15dp"
			android:padding="30dp"
			android:text="@string/connect"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/name_field"
	/>

	<Button
			android:id="@+id/ent_button"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="15dp"
			android:padding="30dp"
			android:text="@string/training"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@id/connect_button"
	/>
</android.support.constraint.ConstraintLayout>
